<h2>{{ include.title }}</h2>
<div class="container">
  <div class="row">
    {% for step in include.steps %}
      <div class="card col-lg-5 mb-4 mx-1">
        <div class="row g-0">
          <div class="col-md-4">
            <a href="{{ step.image | relative_url }}">
              <img src="{{ step.image | relative_url }}" class="img-fluid rounded-start">
            </a>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">{{ step.title }}</h5>
              {% if step.description %}
                <p class="card-text">{{ step.description }}</p>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
